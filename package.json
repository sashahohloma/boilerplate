{
    "name": "boilerplate",
    "description": "Build modern backend with NestJS",
    "version": "0.0.0",
    "author": "@sashahohloma",
    "dependencies": {
        "@fastify/static": "7.0.4",
        "@nestjs/common": "10.4.8",
        "@nestjs/core": "10.4.8",
        "@nestjs/microservices": "10.4.8",
        "@nestjs/platform-fastify": "10.4.8",
        "@nestjs/swagger": "7.4.2",
        "class-transformer": "0.5.1",
        "class-validator": "0.14.1",
        "env-var": "7.5.0",
        "dotenv": "16.4.5",
        "fastify": "4.28.0",
        "luxon": "3.5.0",
        "radash": "12.1.0",
        "rxjs": "7.8.1",
        "uuid": "11.0.3"
    },
    "devDependencies": {
        "@faker-js/faker": "9.2.0",
        "@jest/globals": "29.7.0",
        "@nestjs/cli": "10.4.8",
        "@nestjs/testing": "10.4.8",
        "@stylistic/eslint-plugin": "2.9.0",
        "@types/luxon": "3.4.2",
        "@typescript-eslint/eslint-plugin": "8.8.0",
        "@typescript-eslint/parser": "8.8.0",
        "eslint-plugin-import": "2.31.0",
        "eslint-plugin-promise": "7.1.0",
        "eslint": "8.57.1",
        "jest": "29.7.0",
        "rimraf": "6.0.1",
        "testcontainers": "10.24.0",
        "ts-jest": "29.2.5",
        "ts-node": "10.9.2",
        "typescript": "5.4.5"
    },
    "private": true,
    "repository": "git://github.com/sashahohloma/boilerplate.git",
    "scripts": {
        "bundle:clear": "rimraf build",
        "bundle:compile": "npm run bundle:clear && tsc",
        "bundle:run": "node build/index.js",
        "dev:check": "tsc --noEmit",
        "dev:debug": "nest start --watch --debug 0.0.0.0:9203",
        "dev:format": "npm run dev:lint -- --fix",
        "dev:lint": "eslint ./source --ext .ts",
        "dev:live": "nest start --watch",
        "dev:test": "jest",
        "dev:upgrade": "npm install $(npm outdated | cut -d' ' -f 1 | sed '1d' | xargs -I '$' echo '$@latest' | xargs echo)",
        "dev:watch": "tsc --project tsconfig.json --watch --noEmit"
    }
}
